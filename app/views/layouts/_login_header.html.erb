          <i class="fa-regular fa-address-card fa-lg"></i>
          <p>プロフィール</p>
        </div>
      <% end %>
      <%= link_to  logout_path, class: "text-green-600 hover:text-gray-300", data: { turbo_method: :delete } do %>
