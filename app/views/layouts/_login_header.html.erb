    <%= link_to "教えて先輩!", root_path, class: "text-green-600 hover:text-gray-300 text-3xl font-fine" %>

    <div class="flex space-x-4">
      <%= link_to  "#", class: "text-green-600 hover:text-gray-300" do %>
