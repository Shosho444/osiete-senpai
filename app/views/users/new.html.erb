<div class="hero bg-white py-40">
    <div class="bg-white rounded-2xl shrink-0 w-4/5 shadow-2xl bg-base-100">
    <%= form_with model: @user, class:"card-body" do |f| %>
      <div class="form-control">
        <%= render 'layouts/error_message', model: @user %>
      </div>
      <div class="form-control">
        <%= f.label:name,class:"label label-text" %>
        <%= f.text_field :name, class:'input input-bordered input-success w-full', placeholder:"名前" %>
      </div>
      <div class="form-control">
        <%= f.label:email,class:"label label-text" %>
        <%= f.email_field :email, class: 'input input-bordered input-success w-full', placeholder:"email" %>
      </div>
      <div class="form-control">
        <%= f.label:email_confirmation,class:"label label-text" %>
        <%= f.email_field :email_confirmation, class: 'input input-bordered input-success w-full', placeholder:"確認用email",onpaste: 'return false' %>
      </div>
      <div class="form-control">
        <%= f.label:password,class:"label label-text" %>
        <%= f.password_field :password, class: 'input input-bordered input-success w-full', placeholder:"パスワード" %>
      </div>
      <div class="form-control">
        <%= f.label:password_confirmation,class:"label label-text" %>
        <%= f.password_field :password_confirmation, class: 'input input-bordered input-success w-full', placeholder:"確認用パスワード" %>
      </div>
      <div class="form-control mt-4">
        <%= f.submit "登録", class: "btn bg-green-500 hover:bg-green-600" %>
        <label class="label">
          <a href="#" class="label-text-alt link link-hover">Forgot password?</a>
        </label>
      </div>
    <% end %>
    <div class="form-control">
    </div>
    </div>
</div>