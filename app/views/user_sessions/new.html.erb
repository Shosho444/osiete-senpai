<div class="hero bg-white py-40">
    <div class="bg-white rounded-2xl shrink-0 w-4/5 shadow-2xl bg-base-100">
    <%= form_with url: login_path,class:"card-body" do |f| %>
        <div class="form-control">
          <%= f.label:email,class:"label label-text" %>
          <%= f.email_field :email, class: 'input input-bordered input-success', placeholder:"email" %>
        </div>
        <div class="form-control">
          <%= f.label:password,class:"label label-text" %>
          <%= f.password_field :password, class: 'input input-bordered input-success', placeholder:"password" %>
          <label class="label">
            <a href="#" class="label-text-alt link link-hover">Forgot password?</a>
          </label>
        </div>
        <div class="form-control mt-4">
          <%= f.submit "ログイン", class: "btn bg-green-500 hover:bg-green-600", id:'log' %>
        </div>
      <% end %>
    </div>
</div>